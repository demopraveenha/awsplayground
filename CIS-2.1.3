#!/bin/bash

TEST_NAME="CIS-2.1.3"
TEST_SUMMARY="Ensure discard services are not enabled"
TEST_SEVERITY="High"

#--------
# test scripting
#--------


INSTALLED=false
if command -v rpm >/dev/null
then
    rpm -q xinetd >/dev/null 2>&1
    if [ $? -eq 0 ]
    then
        chkconfig --list |grep discard- |grep :on 2>/dev/null
        [ $? -eq 0 ] && INSTALLED=true
    fi
elif command -v dpkg >/dev/null
then
    dpkg -l xinetd >/dev/null 2>&1
    if [ $? -eq 0 ]
    then
        grep -R "^discard" /etc/inetd.* 2>/dev/null
        [ $? -eq 0 ] && INSTALLED=true
        grep -R "discard" /etc/xinetd.conf /etc/xinetd.d/* 2>/dev/null
        [ $? -eq 0 ] && INSTALLED=true
    fi
else
    :
fi


if [ "$INSTALLED" = false ]
then
    :
else
    logit2 severity=$TEST_SEVERITY name="$TEST_NAME" summary="$TEST_SUMMARY"
fi

