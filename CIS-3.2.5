#!/bin/bash

TEST_NAME="CIS-3.2.5"
TEST_SUMMARY="Ensure broadcast ICMP requests are ignored"
TEST_SEVERITY="High"

#--------
# test scripting
#--------

TEST="`sysctl net.ipv4.icmp_echo_ignore_broadcasts |tr -d ' '`"
if [ "$TEST" = "net.ipv4.icmp_echo_ignore_broadcasts=1" ]
then
    :
else
    logit2 severity=$TEST_SEVERITY name="$TEST_NAME" summary="$TEST_SUMMARY"
fi

