#!/bin/bash

TEST_NAME="CIS-1.1.5"
TEST_SUMMARY="Ensure noexec option set on /tmp partition"
TEST_SEVERITY="High"

#--------
# test scripting
#--------

TEST="`mount | grep -w /tmp |grep noexec`"
if [ -n "$TEST" ]
then
    :
else
    logit2 severity=$TEST_SEVERITY name="$TEST_NAME" summary="$TEST_SUMMARY"
fi

