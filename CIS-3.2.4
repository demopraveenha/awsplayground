#!/bin/bash

TEST_NAME="CIS-3.2.4"
TEST_SUMMARY="Ensure suspicious packets are logged"
TEST_SEVERITY="High"

#--------
# test scripting
#--------

TEST="`sysctl net.ipv4.conf.all.log_martians |tr -d ' '`"
if [ "$TEST" = "net.ipv4.conf.all.log_martians=1" ]
then
    :
else
    logit2 severity=$TEST_SEVERITY name="$TEST_NAME" summary="$TEST_SUMMARY"
fi

TEST="`sysctl net.ipv4.conf.default.log_martians |tr -d ' '`"
if [ "$TEST" = "net.ipv4.conf.default.log_martians=1" ]
then
    :
else
    logit2 severity=$TEST_SEVERITY name="$TEST_NAME" summary="$TEST_SUMMARY"
fi

