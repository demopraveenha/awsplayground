#!/bin/bash

TEST_NAME="CIS-5.4.1.1"
TEST_SUMMARY="Ensure password expiration is 90 days or less"
TEST_SEVERITY="High"

#--------
# test scripting
#--------

OUT="`grep ^PASS_MAX_DAYS /etc/login.defs`"
read OPTION VALUE <<<"$OUT"
if [ "$VALUE" -le 90 ]
then
    :
else
    logit2 severity=$TEST_SEVERITY name="$TEST_NAME" summary="$TEST_SUMMARY"
fi

