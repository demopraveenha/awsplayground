#!/bin/bash

TEST_NAME="CIS-5.4.3"
TEST_SUMMARY="Ensure default group for the root account is GID 0"
TEST_SEVERITY="High"

#--------
# test scripting
#--------

OUT="`grep "^root:" /etc/passwd | cut -f4 -d:`"
if [ "$OUT" -eq 0 ]
then
    :
else
    logit2 severity=$TEST_SEVERITY name="$TEST_NAME" summary="$TEST_SUMMARY"
fi

