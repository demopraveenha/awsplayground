#!/bin/bash

TEST_NAME="CIS-2.2.6"
TEST_SUMMARY="Ensure LDAP server is not enabled"
TEST_SEVERITY="High"

#--------
# test scripting
#--------


STATUS="`systemctl is-enabled slapd 2>/dev/null`"
if [ "$STATUS" != "enabled" ]
then
    :
else
    logit2 severity=$TEST_SEVERITY name="$TEST_NAME" summary="$TEST_SUMMARY"
fi

