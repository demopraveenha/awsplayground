#!/bin/bash

TEST_NAME="CIS-1.7.1.1"
TEST_SUMMARY="Ensure message of the day is configured properly"
TEST_SEVERITY="High"

#--------
# test scripting
#--------

egrep -q '(\\v|\\r|\\m|\\s)' /etc/motd
if [ $? -eq 0 ]
then
    logit2 severity=$TEST_SEVERITY name="$TEST_NAME" summary="$TEST_SUMMARY"
fi

