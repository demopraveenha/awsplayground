#!/bin/bash

TEST_NAME="CIS-5.2.7"
TEST_SUMMARY="Ensure SSH HostbasedAuthentication is disabled"
TEST_SEVERITY="High"

#--------
# test scripting
#--------

OUT="`grep "^HostbasedAuthentication" /etc/ssh/sshd_config |tail -n1`"
if [ "$OUT" = "HostbasedAuthentication no" ]
then
    :
else
    logit2 severity=$TEST_SEVERITY name="$TEST_NAME" summary="$TEST_SUMMARY"
fi

